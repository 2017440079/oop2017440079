
public class TwentyFive {

	
	public static void symmetry(int N) {
		
		int I;
		int J;
		
		for(I=0;I<(N+1)/2;I++)
			System.out.print((N+1)/2-I);
		
		System.out.print("0");
		
		for(I=0;I<(N+1)/2;I++)
			System.out.print(I+1);
	
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int a=0;
		int i=1;
		int j,k;

		while(a!=6) {
			
			j=11-2*a;
			
			for(i=1;i<=j;i++)
				System.out.print("*");
			
			System.out.print(" ");
			
			symmetry(a);
			
			a++;
			System.out.println("");
			
		}
		
		a=1;
		
		while(a!=6) {
			
			j=2*a+1;
			
			for(i=1;i<=j;i++) 
				System.out.print("*");
			
			System.out.print(" ");
			
			symmetry(a);
			
			a++;
			System.out.println("");
			
		}
	}
	
}
