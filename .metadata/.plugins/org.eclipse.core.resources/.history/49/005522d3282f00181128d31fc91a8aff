
public class TwentyFive {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int a=0;
		int i=1;
		int j;

		while(a!=6) {
			
			j=11-2*a
			
			for(i=1;i<=j;i++)
				System.out.print("*");
			
			System.out.print(" ");
			
			for(i=1;i<=j;i++)
				System.out.print(a);
			a++;
			System.out.println("");
			
		}
		
		a=0;
		
		while(a!=6) {
			
			j=2*a+1;
			
			for(i=1;i<=j;i++) 
				System.out.print("*");
			
			System.out.print(" ");
			
			for(i=1;i<=j;i++)
				System.out.print(a);
			
			a++;
			System.out.println("");
			
		}
	}

}
